{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Telemachus Core v0.1",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "vehicle_id": { "type": "string" },
    "position": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      },
      "required": ["lat", "lon"]
    },
    "motion": {
      "type": "object",
      "properties": {
        "speed_kph": { "type": "number" }
      }
    },
    "event": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      }
    }
  },
  "required": ["timestamp", "vehicle_id", "position"]
}